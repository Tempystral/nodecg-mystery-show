{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "array",
  "items": {
    "oneOf": [
      {
        "$ref": "#/definitions/player"
      }
    ]
  },
  "definitions": {
    "player": {
      "description": "A player containing a name, pronouns, and a score",
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string"
        },
        "pronouns": {
          "type": "string"
        },
        "score": {
          "type": "number"
        }
      },
      "required": [
        "name", "score"
      ]
    }
  }
}